<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Réservation Uber – Autocomplete</title>
  <!-- CSS Algolia Places -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/places.js@1.19.0/dist/cdn/places.min.css"/>
</head>
<body style="font-family:sans-serif;padding:2em;max-width:400px;margin:auto;">

  <h2>Adresse de prise en charge</h2>
  <input id="pickup" placeholder="Commencez à taper…"/>

  <h2>Adresse de destination</h2>
  <input id="dropoff" placeholder="Commencez à taper…"/>

  <button id="next" style="margin-top:1em;padding:0.5em;width:100%;">
    Continuer vers le formulaire →
  </button>

  <!-- JS Algolia Places -->
  <script src="https://cdn.jsdelivr.net/npm/places.js@1.19.0"></script>
  <script>
    // Initialise les deux champs autocomplete
    const ac1 = places({ container: document.querySelector('#pickup') });
    const ac2 = places({ container: document.querySelector('#dropoff') });

    document.getElementById('next').onclick = () => {
      const p = ac1.getVal(), d = ac2.getVal();
      if (!p || !d) return alert('Veuillez sélectionner les deux adresses.');
      const base = 'https://tally.so/r/3jp44a';
      const params = `?pick_up=${encodeURIComponent(p)}&drop_off=${encodeURIComponent(d)}`;
      window.location.href = base + params;
    };
  </script>
</body>
</html>
